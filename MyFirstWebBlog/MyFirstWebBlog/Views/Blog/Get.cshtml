@model MyFirstWebBlog.Models.BlogModel

@{
    ViewBag.Title = "Get";
}
<html>
<head>
    <style>
        
    </style>
</head>
<body>
    <div class="row">
        <div class="container">
            <div class="col-md-8">

                <h2>@Model.Title</h2>
                <h5>
                    @Model.Author,
                    @Model.CreationDate
                </h5>
                <p align="justify">@Model.Content</p>
                <p>
                    @foreach (var blogSection in Model.BlogSections)
                    {

                        <h3>@blogSection.SectionTitle </h3>
                    <p> @blogSection.SectionContent</p>
                    <p>
                        @if (blogSection.ImageUrl != null)
                        {
                            <img src="@blogSection.ImageUrl" style="height:100px; width:700px">
                        }
                    </p>



                }
                    </p>
               </div>
            <div class="col-md-4">
                <div class="card">
                    <h3>Popular Post</h3>

                    <div class="fakeimg">
                        @foreach (var blog in ViewBag.list)
                        {
                            <p> <a href="/blog/get/@blog.BlogId"><img src="@blog.ThumbnailImageUrl" style="height:200px; width:400px" ;></a> </p>
                        }
                    </div><br>



                </div>
                <div class="card">
                    <h3>Follow Me</h3>
                    <p>Some text..</p>
                </div>
              </div>
           </div>

        </div>

    </body>
</html>
